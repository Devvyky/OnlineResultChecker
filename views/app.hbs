<link rel="stylesheet" href="stylesheets/style.css">
    <br><br><br><br>
        <header id="main-header" class="bg-primary text-white p-4 mb-3">
                <div class="container">
                    <h1 id="header-title">Result Tracker</h1>
                </div>
            </header>
  
    
        <div class="container">
               <div class="row">
                   <div class="col-md-2"></div>
                   <div class="col-md-8">
                       <div id="main" class="card card-body">
                            <h3 class="title">Welcome</h3> 
                           <div class="row">
                               <div class="col-md-2"></div>
                                <div class="col-md-8">
                                     <form action="/app" method="POST" id='form' class="contact-form">
                                    
                                    <input  style="color:black" type="number" id="loopNumber" class="form-control mb-2"
                                        placeholder="Enter number of courses" name="NumberOfCourses"><br>
                                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                                    <button style="color:white" id="button" 
                                    class="form-control mb-2 btn btn-primary">ENTER</button>
                                    <div class="card card-body" id="resultDisplay" style="display: none;"></div>
                                    <div class="form-group" id="div">
                                    <button  id="reset" class="btn btn-primary" style="display: none;">RESET</button>
                                    <button  id="save" class="btn btn-primary" type="submit"
                                    style="display: none;float: right">PROCEED TO SAVE</button> 
                        
                                </form>
                                </div>
                              
                           </div>

                       </div>
                   </div>
               </div>
            
        </div> 

       
    <script type="text/javascript" src="javascripts/app.js"></script>
    